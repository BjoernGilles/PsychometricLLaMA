@article{ WOS:000380836300031,
Author = {Sanches, Cristina and Gouveia-Pereira, Maria and Maroco, Joao and Gomes,
   Hugo and Roncon, Filipa},
Title = {Deviant behavior variety scale: development and validation with a sample
   of Portuguese adolescents},
Journal = {PSICOLOGIA-REFLEXAO E CRITICA},
Year = {2016},
Volume = {29},
Abstract = {This study presents the development and analysis of the psychometric
   properties of the Deviant Behavior Variety Scale (DBVS). Participants
   were 861 Portuguese adolescents (54 \% female), aged between 12 and 19
   years old. Two alternative models were tested using Confirmatory Factor
   Analysis. Although both models showed good fit indexes, the two-factor
   model didn't presented discriminant validity. Further results provided
   evidence for the factorial and the convergent validity of the
