Journal = {JOURNAL OF MANAGERIAL PSYCHOLOGY},
Year = {2020},
Volume = {35},
Number = {5},
Pages = {435-450},
Month = {JUL 6},
Abstract = {Purpose Due to the paucity of research on web-based job applicant
   screening (i.e. cybervetting), the purpose of the current study was to
   examine the psychometric properties of cybervetting, including an
