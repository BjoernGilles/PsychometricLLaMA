@article{ WOS:000425318400004,
Author = {Nartova-Bochaver, Sofya and Donat, Matthias and Astanina, Nadezhda and
   Rueprich, Claudia},
Title = {Russian Adaptations of General and Personal Belief in a Just World
   Scales: Validation and Psychometric Properties},
