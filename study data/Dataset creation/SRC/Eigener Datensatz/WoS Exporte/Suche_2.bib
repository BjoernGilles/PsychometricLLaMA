@article{ WOS:000311764900018,
Author = {Zemack-Rugar, Yael and Corus, Canan and Brinberg, David},
Title = {The ``Response-to-Failure{''} Scale: Predicting Behavior Following
   Initial Self-Control Failure},
Journal = {JOURNAL OF MARKETING RESEARCH},
Year = {2012},
Volume = {49},
Number = {6},
Pages = {996-1014},
Month = {DEC},
Abstract = {Whereas most existing self-control research and scales focus on singular
   self-control choice, the current work examines sequential self-control
   behavior. Specifically, this research focuses on behavior following
   initial self-control failure, identifying a set of key cognitive and
   emotional responses to initial failure that jointly underlie
   post-failure behavior. The tendency to experience these responses is
   captured in a new scale, the Response-to-Failure scale, which the
   authors develop and test in three consumer domains: eating, spending,
   and cheating. The results support the use of the same emotional and
   cognitive factors to predict post-failure behavior across these three
   domains, providing evidence of the generalizability of the scale
   structure. The data support the scale's structure, nomological and
   discriminant validity, and test-retest reliability across five studies.
   In five additional studies, the scale's predictive validity is
   demonstrated beyond other existing relevant scales. The authors also
   develop and test a short form of each domain scale. Finally, the authors
   discuss the implications for understanding post-failure behavior and
   suggest practical uses for the scale.},
Type = {Article},
DOI = {10.1509/jmr.10.0510},
Keywords = {self-control; sequential choice; scale development; response to failure},
Keywords-Plus = {PERSONALITY; CONCEPTUALIZATION; INDULGENCE; ABSTINENCE; DEPLETION;
   EMOTION; GOALS; LIFE; IF},
Times-Cited = {33},
Unique-ID = {WOS:000311764900018},
}

@article{ WOS:000288254400004,
Author = {Niven, Karen and Totterdell, Peter and Stride, Christopher B. and
   Holman, David},
Title = {Emotion Regulation of Others and Self (EROS): The Development and
