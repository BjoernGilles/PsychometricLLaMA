@article{ WOS:000266031100001,
Author = {Kuncel, Nathan R. and Tellegen, Auke},
Title = {A CONCEPTUAL AND EMPIRICAL REEXAMINATION OF THE MEASUREMENT OF THE
   SOCIAL DESIRABILITY OF ITEMS: IMPLICATIONS FOR DETECTING DESIRABLE
   RESPONSE STYLE AND SCALE DEVELOPMENT},
